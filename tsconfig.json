{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "outDir": "build",
    "module": "commonjs",
    "strict": false,
    "noImplicitAny": false,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

